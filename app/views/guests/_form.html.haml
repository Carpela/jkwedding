= form_for @guest do |f|
  - if @guest.errors.any?
    #error_explanation
      %h2= "#{pluralize(@guest.errors.count, "error")} prohibited this guest from being saved:"
      %ul
        - @guest.errors.full_messages.each do |msg|
          %li= msg

  .row.offset3
    .field
      .span1
        = f.label :firstname, "#{t :firstname_label}"
      .span3
        = f.text_field :firstname
  .row.offset3
    .field
      .span1
        = f.label :email, "#{t :email_label}"
      .span3
        = f.text_field :email
  .row
    .span12
      %h4
        =t :coming_to
  .row
    .field
      .span3
      .span2
        = f.label :ceremony, "#{t :ceremony_label}"
        = f.check_box :ceremony
      .span2
        = f.label :meal, "#{t :meal_label}"
        = f.check_box :meal  
      .span2
        = f.label :evening, "#{t :evening_label}"
        = f.check_box :evening
      .span3
  .row
    %br
    .span3.offset4
      = f.label :notcoming, "#{t :notcoming}"
    .span1
      = f.check_box :notcoming
  .row
    %br
  .row
    .span5.offset1
      %h4=t :specialfood_label
    .span5
      %h4=t :message_label
  .row
    .span5.offset1
      = f.text_area :specialfood
    .span5
      = f.text_area :message
  .row
    %br
    .span12
      .actions
        = f.submit 'RSVP', class:"btn-inverse btn-large", style:"color:#FEFFF1;width:200px;height:50px;font-size:25px"
  .container
