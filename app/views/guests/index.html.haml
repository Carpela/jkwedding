    %th Firstname
    %th Lastname
    %th Specialfood
    %th Ceremony
    %th Meal
    %th Evening
    %th
    %th
    %th

  - @guests.each do |guest|
    %tr
      %td= guest.firstname
      %td= guest.lastname
      %td= guest.specialfood
      %td= guest.ceremony
      %td= guest.meal
      %td= guest.evening
      %td= link_to 'Show', guest
      %td= link_to 'Edit', edit_guest_path(guest)
